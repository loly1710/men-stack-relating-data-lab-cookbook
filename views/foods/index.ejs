<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Pantry</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>

    <% if (pantry && pantry.length > 0) { %>
    <ul>
      <% pantry.forEach(item => { %>
      <li>
        <%= item.name %>
        <a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit</a>
      </li>
      
      <% }); %>
    </ul>
    <% } else { %>
    <p>There are no items in this pantry.</p>
    <% } %>

    <a href="/users/<%= user._id %>/foods/new">Add Pantry Item</a>
    <a href="/users/<%= user._id %>/foods/delete">Delete Pantry Item</a>
  </body>
</html>
